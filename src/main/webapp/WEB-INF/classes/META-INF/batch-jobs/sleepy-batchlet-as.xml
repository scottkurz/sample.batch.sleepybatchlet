<job id="sleepy-batchlet" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
	<step id="step1" next="step2">
	    <listeners>
            <listener ref="com.ibm.ws.jbatch.sample.sleepybatchlet.MyStepListener"/>
            <properties>
                <property name="mm" value="mm44"/>
            </properties>
            <listener ref="com.ibm.ws.jbatch.sample.sleepybatchlet.MyNonBeanStepListener"/>
        </listeners>
		<batchlet ref="com.ibm.ws.jbatch.sample.sleepybatchlet.SleepyAppScopedBatchlet">
            <properties>
                <property name="aa" value="#{jobParameters['aap1']}" />
                <property name="aaa" value="444"/>
                <property name="sleep.time.seconds" value="1" />
            </properties>
        </batchlet>
	</step>
	<step id="step2">
	    <listeners>
            <listener ref="com.ibm.ws.jbatch.sample.sleepybatchlet.MyStepListener"/>
        </listeners>
		<batchlet ref="SBAS">
            <properties>
                <property name="aa" value="#{jobParameters['aap2']}" />
                <property name="aaa" value="555"/>
            </properties>
        </batchlet>
	</step>
</job>
